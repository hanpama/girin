{
  "name": "girin-project",
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "lerna run prepare",
    "bootstrap": "npm i && lerna bootstrap",
    "compile": "lerna run compile",
    "test": "jest --verbose",
    "test:ci": "npm run coverage -- --ci --runInBand",
    "testonly": "npm test",
    "coverage": "npm test -- --coverage",
    "coverage:upload": "codecov",
    "docs": "docsify serve docs"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.1",
    "@types/graphql-relay": "^0.4.7",
    "@types/jest": "^23.3.2",
    "@types/mongodb": "^3.1.9",
    "@types/node": "^10.11.1",
    "codecov": "^3.1.0",
    "graphql": "^14.0.2",
    "graphql-relay": "^0.5.5",
    "jest": "^23.6.0",
    "lerna": "^3.4.0",
    "mongodb": "^3.1.6",
    "ts-jest": "^23.10.2",
    "typedoc": "^0.12.0",
    "typescript": "3.1.1",
    "tslint": "^5.11.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "clearMocks": true
  }
}
